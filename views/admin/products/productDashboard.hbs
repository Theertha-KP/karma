<div class="bg-info-subtle bg-opacity-10 d-flex justify-content-center vh-100">
  <div style="margin-top: 5%" class="p-5 bg-light bg-opacity-50 shadow-sm col-md-8 mb-5">
    <div class="d-flex justify-content-between">
      <button type="button" class="btn btn-primary disabled">
        Total products
      </button>
      <a href="/admin/addproduct">
        <button type="button" class="btn btn-success">Add products</button>
      </a>
    </div>
   
    <div class="mt-3">
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">P.NAME</th>
            <th scope="col">DESCRIPTION</th>
            <th scope="col">CATEGORY</th>
            <th scope="col">PRICE</th>
            <th scope="col">IMAGE</th>
            <th scope="col">ACTIONS</th>
          </tr>
        </thead>
        <tbody>
          {{#each products as |product i|}}
          <tr>
            <th scope="row">{{inc @index}}</th>
            <td>{{product.productName}}</td>
            <td>{{product.description}}</td>
            <td>{{product.categoryId.categoryName}}</td>
            <td>{{product.price}}</td>
            <td><img src="/multer/products/{{product.image.[0]}}" alt="" style="height:50px"></td>
            <td>
              
               <a class="btn btn-danger "  href="/admin/deleteproduct/{{product._id}}"
                  onclick="return confirm('Are you sure you want to delete it?')">Delete</a>
             
               <a class="btn btn-primary" href="/admin/editproduct/{{product._id}}">Edit</a>
                  </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
           
