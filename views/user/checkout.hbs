<!-- SweetAlert JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>


<script>

    function cod() {
        console.log("uuuuuuu");

        const selectedAddressId = document.querySelector('input[name="address"]:checked').value;
        const total = document.getElementById('total').innerText;
        const cartdata = document.getElementById('cartdata').value;
        const count = document.getElementById("cartcount").value;
        const totalPrice = document.getElementById("cartprice").value


        const productIds = cartdata.split(',').filter(id => id !== '');

        axios.post('/cashondelivery', {
            addressId: selectedAddressId,
            payment: 'COD',
            totalAmount: total,
            productIds: productIds,
            count: count,
            totalPrice: totalPrice

        })
            .then(response => {
                console.log(response.data);
                if (response.data.success) {
                    window.location.href = "/orderstatus";
                }
            })
            .catch(error => {
                // Handle errors if the request fails
                console.error(error);
            });
    }



    function initiateRazorpay() {
        console.log("hii razhorpay");
        const cartdata = document.getElementById('cartdata').value;
        const selectedAddressId = document.querySelector('input[name="address"]:checked').value;
        console.log(selectedAddressId);
        const total = parseFloat(document.getElementById('total').innerText.replace('₹', ''));

        const productIds = cartdata.split(',').filter(id => id !== '')

        const count = document.getElementById("cartcount").value;
        const totalPrice = document.getElementById("cartprice").value
        fetch('/razorpay', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                addressId: selectedAddressId,
                totalAmount: total,
                payment: 'online',
                productIds: productIds,
                count: count,
                totalPrice: totalPrice

            })
        })
            .then(response => response.json())
            .then(data => {
                console.log(data);
                const options = {
                    key: data.key,
                    amount: data.amount,
                    currency: 'INR',
                    name: 'Karma',
                    description: 'Payment for Order',
                    order_id: data.id,

                    handler: function (response) {
                        // Handle successful payment
                        axios.post("/verifyRazorpay", {
                            response,
                            receipt: data.receipt
                        }).then(response => {
                            console.log(response.data);
                            if (response.data.success) {
                                window.location.href = "/orderstatus";
                            } else {
                                // Show SweetAlert for failed payment
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Payment Failed',
                                    text: response.data.message
                                });
                            }
                        })
                    }
                };
                const rzp = new Razorpay(options);
                rzp.on('payment.failed', function (response) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Payment Failed',
                        text: 'Payment failed! Try again '
                    });
                    console.error('Payment failed:', response.error);
                    
                });
                rzp.open();
            })
            .catch(error => {
                console.error('Error:', error);
            });
    }




</script>


