    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">C.NAME</th>
        <th scope="col">DESCRIPTION</th>
        
      </tr>
    </thead>
    <tbody>
      {{#each category}}
        <tr>
          <th scope="row">{{inc @index}}</th>
