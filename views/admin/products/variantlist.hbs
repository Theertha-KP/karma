<div class="bg-info-subtle bg-opacity-10 d-flex justify-content-center vh-100%" style="margin-left: 150px;">
    <div style="margin-top: 5%" class="p-5 bg-light bg-opacity-50 shadow-sm col-md-8 mb-5">
        <div class="d-flex justify-content-between">
            <a type="button" href="/admin/productDashboard" class="btn btn-primary ">View Products</a>
            <br>
        </div>

        <div class="mt-3">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">COLOR</th>
                            <th scope="col">SIZE</th>
                            <th scope="col">COST</th>
                            <th scope="col">PRICE</th>
                            <th scope="col">QUANTITY</th>
                            <th scope="col">ACTIONS</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each products as |product i|}}
                        <tr>
                            <th scope="row">{{inc @index}}</th>
                            <td class="bigtext truncate-text">{{product.color}}</td>
                            <td class="bigtext truncate-text">{{product.size}}</td>
                            <td class="bigtext">{{product.cost}}</td>
                            <td class="bigtext">{{product.price}}</td>
                            <td class="bigtext">{{product.quantity}}</td>
                            <td>
                                {{#if product.isListed}}
                                <a href="/admin/listvariant/{{product._id}}"><button class="btn btn-md btn-warning"
                                        onclick="return confirm('Are you sure you want to list product?')">Unlist</button></a>
                                {{else}}
                                <a href="/admin/listvariant/{{product._id}}"><button class="btn btn-md btn-warning"
                                        onclick="return confirm('Are you sure you want to Unlist product?')">List</button></a>
                                {{/if}}
                                <a class="btn btn-md btn-primary" style=" width: 56%;margin-top: 10px;" href="/admin/editvarient/{{product._id}}">Edit</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
