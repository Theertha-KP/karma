<div class="bg-info-subtle  bg-opacity-10 d-flex justify-content-center vh-100%" style="margin-left: 150px;">
  <div style="margin-top: 5%" class="p-5 bg-light bg-opacity-50 shadow-sm col-md-8 mb-5">
    <div class="d-flex justify-content-between">
      <button type="button" class="btn btn-primary disabled">Total products</button>
      <a href="/admin/addproduct">
        <button type="button" class="btn btn-success">Add products</button>
      </a>
    </div>

    <div class="mt-3">
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">P.NAME</th>
            <th scope="col">DESCRIPTION</th>
            <th scope="col">CATEGORY</th>
            <th scope="col">IMAGES</th>
            <th scope="col">VARIENT</th>
            <th scope="col">ACTIONS</th>
          </tr>
        </thead>
        <tbody>
          {{#each products as |product i|}}
          <tr>
            <th scope="row">{{inc @index}}</th>
            <td class="bigtext truncate-text">{{product.productName}}</td>
            <td class="bigtext truncate-text">{{product.description}}</td>
            <td class="bigtext truncate-text">{{product.categoryId.categoryName}}</td>
            <td>
              {{#if product.image.[0]}}
              <img src="/multer/products/{{product.image.[0]}}" alt="Product Image"
                style="max-width: 70px; max-height: 70px;">
              {{else}}
              <!-- Placeholder image or message if no image is available -->
              No Image Available
              {{/if}}
            </td>
            <td>

              <a class="btn btn-primary" href="/admin/addproductvariant/{{product._id}}" style="width: fit-content;">Add
                Varient
              </a>
            </td>
            <td>
              {{#if product.isListed}}
              <a href="/admin/listproduct/{{product._id}}"><button class="btn btn-md btn-warning"
                  onclick="return confirm('Are you sure you want to list product?')">Unlist</button></a>
              {{else}}
              <a href="/admin/listproduct/{{product._id}}"><button class="btn btn-md btn-warning"
                  onclick="return confirm('Are you sure you want to Unlist product?')">List</button></a>
              {{/if}}
              <br>
              <a href="/admin/editproduct/{{product._id}}"><button class="btn btn-md btn-warning">Edit</button></a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
<style>
  .truncate-text {
    max-width: 150px;
    white-space: nowrap;
    /* Prevent text from wrapping */
    overflow: hidden;
    /* Hide overflowing text */
    text-overflow: ellipsis;
    /* Add ellipsis (...) to indicate truncated text */
  }
</style>